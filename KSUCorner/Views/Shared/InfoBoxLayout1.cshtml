<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - KSU Corner</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="/Scripts/jquery-1.10.2.js" type="text/javascript"></script>

    <style type="text/css">
        #body
        {
            background-color: #F5FFFA;
        }
    </style>
</head>

<body>
    <div class="container body-content">
        @RenderBody()

        <table border="0" cellspacing="5" cellpadding="0">
          <tr>
            <td class="datacellonesmall">
            @Html.Raw(ViewBag.Label1)
            </td>
          </tr>
          <tr>
            <td class="datacelltwosmall">
            @Html.Raw(ViewBag.Label2)
            </td>
          </tr>
          <tr>
            <td class="datacellfoursmall">
            @Html.Raw(ViewBag.Label3)
            </td>
          </tr>
          <tr>
            <td class="datacellthreesmall">
            @Html.TextArea("information", (string)ViewBag.Content1, 5, 57, new {@readonly = true})
            </td>
          </tr>
        </table>

        <footer>
            <p>&copy; @DateTime.Now.Year - KSU Corner</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


